#main.grid_8.alpha
  = render 'question'
  - if @question.user == current_user
    = link_to "Delete", question_path(@question), :method => :delete, :confirm => "Are You Sure ??"
  = render :partial => "/comments/comments", :locals => { :commentable => @question }
#sidebar.grid_4.omega
  = question_sidebar(@question.category.questions)
