<% if commentable.comments.length > 0 %>
  <ul class = "comments_list" >
  <% commentable.comments.each do |comment| %>
  < li><%= display_comment(comment) %></li>
  <% end %>
  </ul>
<% end %>
<% if user_signed_in? %>
  <%= form_for ([commentable, commentable.comments.build]), :remote => true do |f| %>
  <%= f.label :message, "Comment" %><br />
  <%= f.text_area :message, :rows => 10 %><br />
  <%= f.submit "Post comment" %>
  <hr/>
  <% end %>
<% else %>
  Login to Comment
<% end %>
